# GateKeeper Production Environment
# Copy this file to .env and fill in your production values

# Server
NODE_ENV=production
PORT=5000

# Database (Hostinger PostgreSQL or external)
DATABASE_URL=postgresql://username:password@localhost:5432/gatekeeper_prod

# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS - Allowed origins (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Paystack Payment Gateway
PAYSTACK_PUBLIC_KEY=pk_live_xxxxxxxxxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
